{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/app",
    "target": "ES2022",
    "module": "ES2022",
    "strict": true,
    // Setting this to true prevents TypeScript from inferring the any type. This ensures that all types are explicitly declared, which aids in maintaining type safety across your application.
    "noImplicitAny": true,
    // When enabled, TypeScript will be more stringent about null and undefined checks, which helps prevent common JavaScript bugs associated with null referencing.
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "exclude": ["test.ts", "**/*.spec.ts"]
}
