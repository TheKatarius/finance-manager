{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": ["./tsconfig.json"],
    "tsconfigRootDir": "./",
    "extraFileExtensions": [".html", ".scss"]
  },
  "plugins": [
    "@typescript-eslint",
    "import"
  ],
  "ignorePatterns": ["**/*.html"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:import/typescript",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "rules": {
    "@typescript-eslint/no-unused-vars": "warn",
    "@typescript-eslint/no-explicit-any": "warn",
    "import/order": [
      "warn",
      {
        "groups": ["builtin", "external", "internal", "parent", "sibling", "index"],
        "pathGroups": [
          {
            "pattern": "app/**",
            "group": "internal"
          },
          {
            "pattern": "environments/**",
            "group": "internal"
          },
          {
            "pattern": "common/**",
            "group": "internal"
          },
          {
            "pattern": "directives/**",
            "group": "internal"
          },
          {
            "pattern": "pipes/**",
            "group": "internal"
          },
          {
            "pattern": "constants/**",
            "group": "internal"
          },
          {
            "pattern": "data/**",
            "group": "internal"
          },
          {
            "pattern": "interfaces/**",
            "group": "internal"
          },
          {
            "pattern": "services/**",
            "group": "internal"
          },
          {
            "pattern": "utils/**",
            "group": "internal"
          },
          {
            "pattern": "config",
            "group": "internal"
          },
          {
            "pattern": "img/**",
            "group": "internal"
          },
          {
            "pattern": "css/**",
            "group": "internal"
          }
        ],
        "pathGroupsExcludedImportTypes": ["builtin"],
        "newlines-between": "always",
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        }
      }
    ],
    "import/no-unresolved": "error"
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "project": "./tsconfig.json",
        "alwaysTryTypes": true
      },
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx", ".html", ".scss"],
        "paths": ["src"],
        "moduleDirectory": ["node_modules", "src/"]
      }
    }
  }
}
